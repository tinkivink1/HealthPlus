@model IEnumerable<HealthPlus.Models.Trainings>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.training_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.training_description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.exercise_list)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.training_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.training_description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.exercise_list)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_training">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id_training">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_training">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
