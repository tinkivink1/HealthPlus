@model HealthPlus.Models.Trainings

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Trainings</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id_training" />
            <div class="form-group">
                <label asp-for="training_name" class="control-label"></label>
                <input asp-for="training_name" class="form-control" />
                <span asp-validation-for="training_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="training_description" class="control-label"></label>
                <input asp-for="training_description" class="form-control" />
                <span asp-validation-for="training_description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="exercise_list" class="control-label"></label>
                <input asp-for="exercise_list" class="form-control" />
                <span asp-validation-for="exercise_list" class="text-danger"></span>
            </div>
            <div class="form-group">
                @{
                    var bin = System.IO.File.ReadAllBytes(@"pic09.jpg");
                }
                <label asp-for="image" class="control-label"></label>
                <input asp-for="image" class="form-control" value=@Html.DisplayNameFor(bin => bin)>
                <span asp-validation-for="image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
